<Window x:Class="ruler.RatioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定度量比率" Height="250" Width="300" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        SizeToContent="Height"
        >
    <StackPanel Margin="20">
        <TextBlock Text="像素長度 (px) [最小為 1]:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox x:Name="txtPx" Text="1" Margin="0,0,0,15" Padding="2"/>

        <TextBlock Text="對應邏輯長度:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox x:Name="txtLogic" Text="1" Margin="0,0,0,15" Padding="2"/>

        <TextBlock Text="邏輯單位名稱:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox x:Name="txtUnit" Text="px" Margin="0,0,0,20" Padding="2"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="確定" Width="70" Margin="0,0,10,0" Click="BtnOK_Click"/>
            <Button Content="取消" Width="70" Click="BtnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>